{
    "extends": "@sindresorhus/tsconfig",
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "dist",
        "strict": true,
        "module": "esnext",
        "target": "ES6",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true
    },
    "typedocOptions": {
        "entryPoints": [
            "src/index.ts"
        ],
        "out": "docs"
    },
    "include": [
        "src"
    ],
    "exclude": [
        "dist",
        "node_modules"
    ]
}